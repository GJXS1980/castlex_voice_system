<?xml version='1.0' encoding='utf-8'?>

<launch>
    <!--打开物联网设备-->
    <node pkg = "iot_wifi_system" type = "IOT_ARV_Node" name = "IOT_ARV_Node" output="screen">
	<param name="product_key_param" value="a1KEMZ8ZAov" />
	<param name="device_name_param" value="HG-PcHost" />
	<param name="device_secret_param" value="f8a27072944d2658227fb635b61108ea" />
	<param name="host_param" value="a1KEMZ8ZAov.iot-as-mqtt.cn-shanghai.aliyuncs.com" />
	<param name="sub_topic_param" value="/broadcast/a1KEMZ8ZAov/IOTmsg" />
	<param name="pub_topic_param" value="/broadcast/a1KEMZ8ZAov/IOTmsg" />
    </node>

    <!--打开语音唤醒-->
    <node pkg = "castlex_voice_system" type = "castle_awake_node" name = "castle_awake_node" output="screen">
        <param name="lgi_param" value="appid = 551d49a3, work_dir = ." />
        <param name="response" value="/home/castlex/.ws/castlex_voice_system/res/music/wozai.wav" />
        <param name="ssb_param_path" value="/home/castlex/.ws/castlex_voice_system/res/ivw/wakeupresource.jet" />
        <param name="audio_file_path" value="/home/castlex/.ws/castlex_voice_system/bin/audio/awake.wav" />
    </node>

    <!--打开语音合成-->
    <!--node pkg = "castlex_voice_system" type = "castle_tts_node" name = "castle_tts_node" output="screen">
        <param name="speech_param" value="voice_name = vixy, text_encoding = utf8, sample_rate = 16000, speed = 50, volume = 50, pitch = 50, rdn = 0" />
    </node-->

    <!--打开命令词识别-->
    <node pkg = "castlex_voice_system" type = "offline_command_word" name = "offline_command_word" output="screen">
        <param name="appid" value="appid = 551d49a3, work_dir = ." />
        <param name="FILE_path" value="/home/castlex/.ws/castlex_voice_system/bin/bnf/object_detect.bnf" />
        <param name="RES_path" value="/home/castlex/.ws/castlex_voice_system/bin/msc/res/asr/common.jet" />
        <param name="BUILD_path" value="/home/castlex/.ws/castlex_voice_system/bin/msc/res/asr/GrmBuilld" />
        <param name="xml_path" value="/home/castlex/.ws/castlex_voice_system/params/voiceNav.xml" />
	<remap from="/voice/castle_cmd_topic" to="/voice/iot_state_topic" />
    </node>
    	
</launch>


