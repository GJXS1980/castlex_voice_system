<?xml version='1.0' encoding='utf-8'?>

<launch>
    <!--打开语音唤醒-->
    <include file="$(find castlex_voice_system)/launch/castlex_awake.launch"/>
    <!--打开语音合成-->
    <node pkg = "castlex_voice_system" type = "castle_tts_node" name = "castle_tts_node" output="screen">
        <param name="speech_param" value="voice_name = vixy, text_encoding = utf8, sample_rate = 16000, speed = 50, volume = 50, pitch = 50, rdn = 0" />
    </node>
    <!--打开语义理解-->
    <node pkg = "castlex_voice_system" type = "castle_nlu_node" name = "castle_nlu_node" output="screen">
        <param name="userid" value="HGcastle" />
    </node>
    
    <!--打开语音识别-->
    <node pkg = "castlex_voice_system" type = "castle_asr_node" name = "castle_asr_node" output="screen">
        <param name="speech_param" value="sub = iat, domain = iat, language = zh_cn, accent = mandarin, sample_rate = 16000, result_type = plain, result_encoding = utf8" />
    </node>

</launch>
